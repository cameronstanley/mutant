.page-header
  %ul.nav.nav-pills.pull-right
    %li{role: "presentation"}
      = link_to playlists_path do
        %span.glyphicon.glyphicon-chevron-left
        Back
  %h2 
    %span.glyphicon.glyphicon-plus
    Add New Playlist

.row
  .col-md-8.col-md-offset-2
    .well
      = form_for @playlist, html: { class: "form-horizontal" } do |f|
        .form-group
          = f.label :name, "Name", class: "control-label col-md-2"
          .col-md-8
            = f.text_field :name, class: "form-control", placeholder: "Enter playlist name"
        .form-group
          .col-md-8.col-md-offset-2
            = f.submit "Save", class: "btn btn-md btn-primary btn-block"
